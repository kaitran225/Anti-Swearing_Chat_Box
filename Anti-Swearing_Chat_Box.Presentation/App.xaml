<Application x:Class="Anti_Swearing_Chat_Box.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Anti_Swearing_Chat_Box.Presentation"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Purple"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Primary Colors -->
            <Color x:Key="PrimaryBrightPurple">#A280FF</Color>
            <Color x:Key="PrimaryRoyalPurple">#8F66FF</Color>
            <Color x:Key="PrimaryDeepPurple">#7C4CFF</Color>
            <Color x:Key="PrimarySpecialPurple">#6933FF</Color>
            
            <!-- Accent Colors -->
            <Color x:Key="AccentBrightGreen">#47D068</Color>
            <Color x:Key="AccentLightPurple">#C7B3FF</Color>
            <Color x:Key="AccentVeryLightPurple">#F8F5FF</Color>
            
            <!-- Neutral Colors -->
            <Color x:Key="NeutralWhite">#FFFFFF</Color>
            <Color x:Key="NeutralGray">#B3B3B3</Color>
            <Color x:Key="NeutralDarkGray">#616161</Color>
            <Color x:Key="NeutralVeryDarkGray">#333333</Color>
            <Color x:Key="NeutralAlmostBlack">#1C1C1C</Color>
            <Color x:Key="NeutralAltDarkGray">#191919</Color>
            <Color x:Key="NeutralBlack">#0E0E0E</Color>
            
            <!-- Transparent Colors -->
            <Color x:Key="TransparentOverlay">#26D9D9D9</Color>  <!-- 15% -->
            <Color x:Key="TransparentLightOverlay">#82FFFFFF</Color>  <!-- 51% -->
            <Color x:Key="TransparentPurpleOverlay">#808F66FF</Color>  <!-- 50% -->
            <Color x:Key="TransparentSubtlePurple">#1F8F66FF</Color>  <!-- 12% -->
            <Color x:Key="TransparentStrongPurple">#E08F66FF</Color>  <!-- 88% -->
            
            <!-- Brushes -->
            <SolidColorBrush x:Key="PrimaryBrightPurpleBrush" Color="{StaticResource PrimaryBrightPurple}"/>
            <SolidColorBrush x:Key="PrimaryRoyalPurpleBrush" Color="{StaticResource PrimaryRoyalPurple}"/>
            <SolidColorBrush x:Key="PrimaryDeepPurpleBrush" Color="{StaticResource PrimaryDeepPurple}"/>
            <SolidColorBrush x:Key="PrimarySpecialPurpleBrush" Color="{StaticResource PrimarySpecialPurple}"/>
            
            <SolidColorBrush x:Key="AccentBrightGreenBrush" Color="{StaticResource AccentBrightGreen}"/>
            <SolidColorBrush x:Key="AccentLightPurpleBrush" Color="{StaticResource AccentLightPurple}"/>
            <SolidColorBrush x:Key="AccentVeryLightPurpleBrush" Color="{StaticResource AccentVeryLightPurple}"/>
            
            <SolidColorBrush x:Key="NeutralWhiteBrush" Color="{StaticResource NeutralWhite}"/>
            <SolidColorBrush x:Key="NeutralGrayBrush" Color="{StaticResource NeutralGray}"/>
            <SolidColorBrush x:Key="NeutralDarkGrayBrush" Color="{StaticResource NeutralDarkGray}"/>
            <SolidColorBrush x:Key="NeutralVeryDarkGrayBrush" Color="{StaticResource NeutralVeryDarkGray}"/>
            <SolidColorBrush x:Key="NeutralAlmostBlackBrush" Color="{StaticResource NeutralAlmostBlack}"/>
            <SolidColorBrush x:Key="NeutralAltDarkGrayBrush" Color="{StaticResource NeutralAltDarkGray}"/>
            <SolidColorBrush x:Key="NeutralBlackBrush" Color="{StaticResource NeutralBlack}"/>
            
            <SolidColorBrush x:Key="TransparentOverlayBrush" Color="{StaticResource TransparentOverlay}"/>
            <SolidColorBrush x:Key="TransparentLightOverlayBrush" Color="{StaticResource TransparentLightOverlay}"/>
            <SolidColorBrush x:Key="TransparentPurpleOverlayBrush" Color="{StaticResource TransparentPurpleOverlay}"/>
            <SolidColorBrush x:Key="TransparentSubtlePurpleBrush" Color="{StaticResource TransparentSubtlePurple}"/>
            <SolidColorBrush x:Key="TransparentStrongPurpleBrush" Color="{StaticResource TransparentStrongPurple}"/>

            <!-- Gradients -->
            <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryBrightPurple}" Offset="0"/>
                <GradientStop Color="{StaticResource PrimaryDeepPurple}" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource NeutralAlmostBlack}" Offset="0"/>
                <GradientStop Color="{StaticResource NeutralBlack}" Offset="1"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>

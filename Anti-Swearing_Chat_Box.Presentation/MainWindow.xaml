<Window x:Class="Anti_Swearing_Chat_Box.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Anti_Swearing_Chat_Box.Presentation"
        xmlns:controls="clr-namespace:Anti_Swearing_Chat_Box.Presentation.Controls"
        mc:Ignorable="d"
        Title="Anti-Swearing Chat Box" Height="720" Width="1280"
        TextElement.Foreground="{StaticResource NeutralWhiteBrush}"
        Background="{StaticResource NeutralBlackBrush}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <Style x:Key="ChatListItemStyle" TargetType="ListViewItem">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="{StaticResource TransparentOverlayBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="12">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource TransparentLightOverlayBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource TransparentPurpleOverlayBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border BorderThickness="1" BorderBrush="{StaticResource NeutralDarkGrayBrush}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom title bar -->
            <Grid Grid.Row="0" Background="{StaticResource NeutralBlackBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="ANTI-SWEARING CHAT" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Margin="16,12" 
                          Foreground="{StaticResource NeutralWhiteBrush}"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="MaximizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMaximize" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Height="20" Width="20"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Chat List -->
                <Grid Grid.Column="0" Background="{StaticResource NeutralAlmostBlackBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                           Background="{StaticResource NeutralAltDarkGrayBrush}" 
                           Padding="16" 
                           materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="Chats" 
                                         Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                         Foreground="{StaticResource NeutralWhiteBrush}"/>
                                <TextBox materialDesign:HintAssist.Hint="Search chats..."
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        Background="{StaticResource TransparentOverlayBrush}"
                                        Foreground="{StaticResource NeutralWhiteBrush}"
                                        BorderBrush="{StaticResource NeutralGrayBrush}"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Background="{StaticResource AccentBrightGreenBrush}"
                                    Foreground="{StaticResource NeutralWhiteBrush}"
                                    ToolTip="New Chat">
                                <materialDesign:PackIcon Kind="MessagePlus" Height="24" Width="24"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Chat List -->
                    <ListView Grid.Row="1" 
                             Margin="8" 
                             Background="Transparent"
                             BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource ChatListItemStyle}"/>
                        </ListView.ItemContainerStyle>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Width="48" Height="48" 
                                       Background="{StaticResource AccentBrightGreenBrush}" 
                                       CornerRadius="24" 
                                       materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                    <TextBlock Text="JD" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             FontWeight="Bold"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="John Doe" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource NeutralWhiteBrush}"/>
                                    <TextBlock Text="Last message..." 
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             TextTrimming="CharacterEllipsis" 
                                             Foreground="{StaticResource NeutralGrayBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="2:30 PM" 
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Foreground="{StaticResource NeutralGrayBrush}"/>
                                    <materialDesign:PackIcon Kind="CheckAll" 
                                                           Height="16" 
                                                           Width="16"
                                                           HorizontalAlignment="Right"
                                                           Foreground="{StaticResource AccentBrightGreenBrush}"/>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Width="48" Height="48" 
                                       Background="{StaticResource PrimaryRoyalPurpleBrush}" 
                                       CornerRadius="24" 
                                       materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                    <TextBlock Text="JS" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             FontWeight="Bold"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Jane Smith" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource NeutralWhiteBrush}"/>
                                    <TextBlock Text="Last message..." 
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             TextTrimming="CharacterEllipsis" 
                                             Foreground="{StaticResource NeutralGrayBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="1:45 PM" 
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Foreground="{StaticResource NeutralGrayBrush}"/>
                                    <materialDesign:PackIcon Kind="CheckAll" 
                                                           Height="16" 
                                                           Width="16"
                                                           HorizontalAlignment="Right"
                                                           Foreground="{StaticResource AccentBrightGreenBrush}"/>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </Grid>

                <!-- Right Panel - Chat Area -->
                <Grid Grid.Column="1" Background="{StaticResource NeutralBlackBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" 
                          Background="{StaticResource NeutralAltDarkGrayBrush}" 
                          Padding="16" 
                          materialDesign:ShadowAssist.ShadowDepth="Depth2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Width="48" Height="48" 
                                       Background="{StaticResource AccentBrightGreenBrush}" 
                                       CornerRadius="24" 
                                       materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                    <TextBlock Text="JD" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             FontWeight="Bold"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="John Doe" 
                                             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                             Foreground="{StaticResource NeutralWhiteBrush}"/>
                                    <TextBlock Text="Online" 
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Foreground="{StaticResource AccentBrightGreenBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" 
                                      Orientation="Horizontal" 
                                      HorizontalAlignment="Right">
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Background="{StaticResource TransparentOverlayBrush}"
                                        Foreground="{StaticResource NeutralWhiteBrush}"
                                        Margin="4,0"
                                        ToolTip="Video Call">
                                    <materialDesign:PackIcon Kind="Video" Height="24" Width="24"/>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Background="{StaticResource TransparentOverlayBrush}"
                                        Foreground="{StaticResource NeutralWhiteBrush}"
                                        Margin="4,0"
                                        ToolTip="Voice Call">
                                    <materialDesign:PackIcon Kind="Phone" Height="24" Width="24"/>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Background="{StaticResource TransparentOverlayBrush}"
                                        Foreground="{StaticResource NeutralWhiteBrush}"
                                        Margin="4,0"
                                        ToolTip="More Options">
                                    <materialDesign:PackIcon Kind="DotsVertical" Height="24" Width="24"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="1" Margin="16">
                        <StackPanel>
                            <controls:ChatBubble Username="John Doe" 
                                                Message="Hi there! How are you today?"
                                                Time="2:30 PM"
                                                Status="Read"
                                                IsOwnMessage="False"/>
                            <controls:ChatBubble Username="You" 
                                                Message="I'm doing great, thanks for asking!"
                                                Time="2:31 PM"
                                                Status="Read"
                                                IsOwnMessage="True"/>
                            <controls:ChatBubble Username="John Doe" 
                                                Message="That's wonderful! Have you been working on any interesting projects lately?"
                                                Time="2:32 PM"
                                                Status="Read"
                                                IsOwnMessage="False"/>
                            <controls:ChatBubble Username="You" 
                                                Message="Yes, I'm working on an anti-swearing chat application. It's quite interesting!"
                                                Time="2:33 PM"
                                                Status="Read"
                                                IsOwnMessage="True"/>
                            <controls:ChatBubble Username="John Doe" 
                                                Message="That sounds fascinating! How does it work?"
                                                Time="2:34 PM"
                                                Status="Read"
                                                IsOwnMessage="False"/>
                            <controls:ChatBubble Username="You" 
                                                Message="It uses AI to detect and moderate inappropriate content in real-time."
                                                Time="2:35 PM"
                                                Status="Read"
                                                IsOwnMessage="True"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Message Input -->
                    <Border Grid.Row="2" 
                          Margin="16" 
                          Background="{StaticResource TransparentOverlayBrush}" 
                          CornerRadius="24" 
                          BorderThickness="1" 
                          BorderBrush="{StaticResource NeutralDarkGrayBrush}"
                          Padding="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Background="{StaticResource TransparentOverlayBrush}"
                                    Foreground="{StaticResource NeutralWhiteBrush}"
                                    ToolTip="Attach file">
                                <materialDesign:PackIcon Kind="Paperclip" Height="24" Width="24"/>
                            </Button>
                            
                            <TextBox Grid.Column="1"
                                    materialDesign:HintAssist.Hint="Type a message..."
                                    Style="{StaticResource MaterialDesignTextBox}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{StaticResource NeutralWhiteBrush}"
                                    Margin="8,0"/>
                            
                            <Button Grid.Column="2"
                                    Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Background="{StaticResource AccentBrightGreenBrush}"
                                    ToolTip="Send message">
                                <materialDesign:PackIcon Kind="Send" Height="20" Width="20"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>

<UserControl x:Class="Anti_Swearing_Chat_Box.Presentation.Controls.ContactItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" 
                x:Name="AvatarBorder"
                Width="40" Height="40" 
                Background="{StaticResource MatchaGreenBrush}" 
                CornerRadius="20" 
                materialDesign:ElevationAssist.Elevation="Dp2">
            <TextBlock x:Name="InitialsText" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Center" 
                      FontWeight="Bold"/>
        </Border>
        
        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <TextBlock x:Name="NameText" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource NeutralWhiteBrush}"/>
            <TextBlock x:Name="StatusText" 
                      FontSize="12"
                      Foreground="{StaticResource NeutralGrayBrush}"/>
        </StackPanel>
        
        <ContentPresenter Grid.Column="2" x:Name="ActionContentControl"/>
    </Grid>
</UserControl> 
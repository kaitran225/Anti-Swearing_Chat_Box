<Window x:Class="Anti_Swearing_Chat_Box.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Anti_Swearing_Chat_Box.Presentation"
        xmlns:controls="clr-namespace:Anti_Swearing_Chat_Box.Presentation.Controls"
        mc:Ignorable="d"
        Title="Anti-Swearing Chat" Height="720" Width="1280"
        TextElement.Foreground="{StaticResource NeutralWhiteBrush}"
        Background="{StaticResource NeutralBlackBrush}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <!-- ListItem Style for Chat and Contact lists -->
        <Style x:Key="SidebarListItemStyle" TargetType="ListViewItem">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrightGreenBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Button Style -->
        <Style x:Key="SidebarTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeutralGrayBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" 
                                             Focusable="False" 
                                             HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                             Margin="{TemplateBinding Padding}" 
                                             RecognizesAccessKey="True" 
                                             SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="#252525"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrightGreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#252525"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrightGreenBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border BorderThickness="1" BorderBrush="{StaticResource NeutralDarkGrayBrush}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom title bar -->
            <Grid Grid.Row="0" Background="{StaticResource NeutralBlackBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ANTI-SWEARING CHAT" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="16,12" 
                              Foreground="{StaticResource NeutralWhiteBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="MaximizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMaximize" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Height="20" Width="20"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Sidebar -->
                <Grid Grid.Column="0" Background="#111111">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- User Profile -->
                    <Border Grid.Row="0" 
                           Background="Transparent" 
                           Padding="16,16,16,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="40" Height="40" 
                                   Background="{StaticResource MatchaGreenBrush}" 
                                   CornerRadius="20" 
                                   materialDesign:ElevationAssist.Elevation="Dp2">
                                <TextBlock Text="ME" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center" 
                                         FontWeight="Bold"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Current User" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource NeutralWhiteBrush}"/>
                                <TextBlock Text="Online" 
                                         FontSize="12"
                                         Foreground="{StaticResource AccentBrightGreenBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Tabs: Chats/Contacts -->
                    <Grid Grid.Row="1" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="ChatsTabButton" 
                               Grid.Column="0" 
                               Content="Chats" 
                               Style="{StaticResource SidebarTabButtonStyle}" 
                               Foreground="{StaticResource AccentBrightGreenBrush}"
                               FontWeight="Bold"
                               Click="ChatsTabButton_Click"/>
                        
                        <Button x:Name="ContactsTabButton" 
                               Grid.Column="1" 
                               Content="Contacts" 
                               Style="{StaticResource SidebarTabButtonStyle}"
                               Click="ContactsTabButton_Click"/>
                    </Grid>
                    
                    <!-- Search Bar -->
                    <Grid Grid.Row="2" Margin="16,16,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#1A1A1A" 
                               CornerRadius="8" 
                               Padding="8,0" 
                               Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Kind="Magnify" 
                                                      Grid.Column="0"
                                                      VerticalAlignment="Center" 
                                                      Margin="4,0" 
                                                      Foreground="{StaticResource NeutralGrayBrush}"/>
                                
                                <TextBox Grid.Column="1"
                                        materialDesign:HintAssist.Hint="Search..."
                                        Style="{StaticResource MaterialDesignTextBox}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{StaticResource NeutralWhiteBrush}"
                                        VerticalAlignment="Center"
                                        Margin="4,8"/>
                                
                                <Button x:Name="NewChatButton"
                                       Grid.Column="2"
                                       Style="{StaticResource MaterialDesignIconButton}"
                                       Background="Transparent"
                                       Foreground="{StaticResource AccentBrightGreenBrush}"
                                       ToolTip="New Chat"
                                       Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Plus" Height="20" Width="20"/>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Content Area -->
                        <Grid Grid.Row="1">
                            <!-- Chats List -->
                            <ListView x:Name="ChatsListView" 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Visibility="Visible">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource SidebarListItemStyle}"/>
                                </ListView.ItemContainerStyle>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="40" Height="40" 
                                               Background="{StaticResource MatchaGreenBrush}" 
                                               CornerRadius="20" 
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                            <TextBlock Text="JD" 
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Center" 
                                                     FontWeight="Bold"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="John Doe" 
                                                     FontWeight="Bold" 
                                                     Foreground="{StaticResource NeutralWhiteBrush}"/>
                                            <TextBlock Text="Last message..." 
                                                     TextTrimming="CharacterEllipsis" 
                                                     Foreground="{StaticResource NeutralGrayBrush}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" 
                                                 Text="2:30 PM" 
                                                 Foreground="{StaticResource NeutralGrayBrush}"
                                                 VerticalAlignment="Top"
                                                 FontSize="10"/>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="40" Height="40" 
                                               Background="#4D8561" 
                                               CornerRadius="20" 
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                            <TextBlock Text="JS" 
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Center" 
                                                     FontWeight="Bold"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="Jane Smith" 
                                                     FontWeight="Bold" 
                                                     Foreground="{StaticResource NeutralWhiteBrush}"/>
                                            <TextBlock Text="Last message..." 
                                                     TextTrimming="CharacterEllipsis" 
                                                     Foreground="{StaticResource NeutralGrayBrush}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" 
                                                 Text="1:45 PM" 
                                                 Foreground="{StaticResource NeutralGrayBrush}"
                                                 VerticalAlignment="Top"
                                                 FontSize="10"/>
                                    </Grid>
                                </ListViewItem>
                            </ListView>
                            
                            <!-- Contacts List -->
                            <ListView x:Name="ContactsListView" 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Visibility="Collapsed">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem" BasedOn="{StaticResource SidebarListItemStyle}"/>
                                </ListView.ItemContainerStyle>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="40" Height="40" 
                                               Background="{StaticResource MatchaGreenBrush}" 
                                               CornerRadius="20" 
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                            <TextBlock Text="JD" 
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Center" 
                                                     FontWeight="Bold"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="John Doe" 
                                                     FontWeight="Bold" 
                                                     Foreground="{StaticResource NeutralWhiteBrush}"/>
                                            <TextBlock Text="Online" 
                                                     Foreground="{StaticResource AccentBrightGreenBrush}"
                                                     FontSize="12"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="2"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               Background="Transparent"
                                               Foreground="{StaticResource AccentBrightGreenBrush}"
                                               Width="32" Height="32">
                                            <materialDesign:PackIcon Kind="MessageText" Height="16" Width="16"/>
                                        </Button>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="40" Height="40" 
                                               Background="#4D8561" 
                                               CornerRadius="20" 
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                            <TextBlock Text="JS" 
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Center" 
                                                     FontWeight="Bold"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="Jane Smith" 
                                                     FontWeight="Bold" 
                                                     Foreground="{StaticResource NeutralWhiteBrush}"/>
                                            <TextBlock Text="Offline" 
                                                     Foreground="{StaticResource NeutralGrayBrush}"
                                                     FontSize="12"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="2"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               Background="Transparent"
                                               Foreground="{StaticResource AccentBrightGreenBrush}"
                                               Width="32" Height="32">
                                            <materialDesign:PackIcon Kind="MessageText" Height="16" Width="16"/>
                                        </Button>
                                    </Grid>
                                </ListViewItem>
                                <ListViewItem>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="40" Height="40" 
                                               Background="#2E5035" 
                                               CornerRadius="20" 
                                               materialDesign:ElevationAssist.Elevation="Dp2">
                                            <TextBlock Text="AJ" 
                                                     VerticalAlignment="Center" 
                                                     HorizontalAlignment="Center" 
                                                     FontWeight="Bold"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock Text="Alex Johnson" 
                                                     FontWeight="Bold" 
                                                     Foreground="{StaticResource NeutralWhiteBrush}"/>
                                            <TextBlock Text="Online" 
                                                     Foreground="{StaticResource AccentBrightGreenBrush}"
                                                     FontSize="12"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="2"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               Background="Transparent"
                                               Foreground="{StaticResource AccentBrightGreenBrush}"
                                               Width="32" Height="32">
                                            <materialDesign:PackIcon Kind="MessageText" Height="16" Width="16"/>
                                        </Button>
                                    </Grid>
                                </ListViewItem>
                            </ListView>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Right Panel - Chat Area -->
                <Grid Grid.Column="1" Background="#0A0A0A">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" 
                          Background="#151515" 
                          Padding="20,16" 
                          materialDesign:ElevationAssist.Elevation="Dp1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Width="40" Height="40" 
                                       Background="{StaticResource MatchaGreenBrush}" 
                                       CornerRadius="20" 
                                       materialDesign:ElevationAssist.Elevation="Dp2">
                                    <TextBlock Text="JD" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             FontWeight="Bold"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="John Doe" 
                                             FontSize="16"
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource NeutralWhiteBrush}"/>
                                    <TextBlock Text="Online" 
                                             FontSize="12"
                                             Foreground="{StaticResource AccentBrightGreenBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button Grid.Column="2"
                                   Style="{StaticResource MaterialDesignIconButton}"
                                   Background="Transparent"
                                   Foreground="{StaticResource NeutralGrayBrush}"
                                   Width="36" Height="36"
                                   ToolTip="Options">
                                <materialDesign:PackIcon Kind="DotsVertical" Height="20" Width="20"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="1" Margin="20,16">
                        <StackPanel>
                            <controls:ChatBubble Username="John Doe" 
                                                Message="Hi there! How are you today?"
                                                Time="2:30 PM"
                                                Status="Read"
                                                IsOwnMessage="False"/>
                            <controls:ChatBubble Username="You" 
                                                Message="I'm doing great, thanks for asking!"
                                                Time="2:31 PM"
                                                Status="Read"
                                                IsOwnMessage="True"/>
                            <controls:ChatBubble Username="John Doe" 
                                                Message="That's wonderful! Have you been working on any interesting projects lately?"
                                                Time="2:32 PM"
                                                Status="Read"
                                                IsOwnMessage="False"/>
                            <controls:ChatBubble Username="You" 
                                                Message="Yes, I'm working on an anti-swearing chat application. It's quite interesting!"
                                                Time="2:33 PM"
                                                Status="Read"
                                                IsOwnMessage="True"/>
                            <controls:ChatBubble Username="John Doe" 
                                                Message="That sounds fascinating! How does it work?"
                                                Time="2:34 PM"
                                                Status="Read"
                                                IsOwnMessage="False"/>
                            <controls:ChatBubble Username="You" 
                                                Message="It uses AI to detect and moderate inappropriate content in real-time."
                                                Time="2:35 PM"
                                                Status="Read"
                                                IsOwnMessage="True"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Message Input -->
                    <Border Grid.Row="2" 
                          Margin="20,0,20,20" 
                          Background="#151515" 
                          CornerRadius="8" 
                          BorderThickness="0"
                          Padding="16,12">
    <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Background="Transparent"
                                    Foreground="{StaticResource NeutralGrayBrush}"
                                    Width="36" Height="36"
                                    ToolTip="Attach file">
                                <materialDesign:PackIcon Kind="Paperclip" Height="20" Width="20"/>
                            </Button>
                            
                            <TextBox x:Name="MessageTextBox"
                                    Grid.Column="1"
                                    materialDesign:HintAssist.Hint="Type a message..."
                                    Style="{StaticResource MaterialDesignTextBox}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{StaticResource NeutralWhiteBrush}"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>
                            
                            <Button x:Name="SendButton"
                                    Grid.Column="2"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Background="{StaticResource MatchaGreenBrush}"
                                    Foreground="{StaticResource NeutralWhiteBrush}"
                                    Width="36" Height="36"
                                    ToolTip="Send message"
                                    Click="SendMessageButton_Click">
                                <materialDesign:PackIcon Kind="Send" Height="20" Width="20"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
    </Grid>
    </Border>
</Window>

<Window x:Class="AntiSwearingChatBox.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:AntiSwearingChatBox.App"
        xmlns:controls="clr-namespace:AntiSwearingChatBox.App.Controls"
        mc:Ignorable="d"
        Title="Anti-Swearing Chat" Height="720" Width="1280"
        TextElement.Foreground="{StaticResource NeutralWhiteBrush}"
        Background="{StaticResource NeutralBlackBrush}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <!-- ListItem Style for Chat and Contact lists -->
        <Style x:Key="SidebarListItemStyle" TargetType="ListViewItem">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrightGreenBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Button Style -->
        <Style x:Key="SidebarTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource NeutralGrayBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" 
                                             Focusable="False" 
                                             HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                             Margin="{TemplateBinding Padding}" 
                                             RecognizesAccessKey="True" 
                                             SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="#252525"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrightGreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#252525"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrightGreenBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border BorderThickness="1" BorderBrush="{StaticResource NeutralDarkGrayBrush}" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom title bar -->
            <Grid Grid.Row="0" Background="{StaticResource NeutralBlackBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ANTI-SWEARING CHAT" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="16,12" 
                              Foreground="{StaticResource NeutralWhiteBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMinimize" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="MaximizeButton_Click">
                        <materialDesign:PackIcon Kind="WindowMaximize" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            Height="40" Width="40" 
                            Foreground="{StaticResource NeutralWhiteBrush}"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Height="20" Width="20"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Sidebar -->
                <Grid Grid.Column="0" Background="#111111">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- User Profile -->
                    <Border Grid.Row="0" 
                           Background="Transparent" 
                           Padding="16,16,16,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="40" Height="40" 
                                   Background="{StaticResource MatchaGreenBrush}" 
                                   CornerRadius="20" 
                                   materialDesign:ElevationAssist.Elevation="Dp2">
                                <TextBlock Text="ME" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center" 
                                         FontWeight="Bold"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Current User" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource NeutralWhiteBrush}"/>
                                <TextBlock Text="Online" 
                                         FontSize="12"
                                         Foreground="{StaticResource AccentBrightGreenBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Tabs: Chats/Contacts -->
                    <Grid Grid.Row="1" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="ChatsTabButton" 
                               Grid.Column="0" 
                               Content="Chats" 
                               Style="{StaticResource SidebarTabButtonStyle}" 
                               Foreground="{StaticResource AccentBrightGreenBrush}"
                               FontWeight="Bold"
                               Click="ChatsTabButton_Click"/>
                        
                        <Button x:Name="ContactsTabButton" 
                               Grid.Column="1" 
                               Content="Contacts" 
                               Style="{StaticResource SidebarTabButtonStyle}"
                               Click="ContactsTabButton_Click"/>
                    </Grid>
                    
                    <!-- Search Bar -->
                    <Grid Grid.Row="2" Margin="16,16,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Background="#1A1A1A" 
                               CornerRadius="8" 
                               Padding="8,0" 
                               Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Kind="Magnify" 
                                                      Grid.Column="0"
                                                      VerticalAlignment="Center" 
                                                      Margin="4,0" 
                                                      Foreground="{StaticResource NeutralGrayBrush}"/>
                                
                                <TextBox Grid.Column="1"
                                        materialDesign:HintAssist.Hint="Search..."
                                        Style="{StaticResource MaterialDesignTextBox}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{StaticResource NeutralWhiteBrush}"
                                        VerticalAlignment="Center"
                                        Margin="4,8"/>
                                
                                <Button x:Name="NewChatButton"
                                       Grid.Column="2"
                                       Style="{StaticResource MaterialDesignIconButton}"
                                       Background="Transparent"
                                       Foreground="{StaticResource AccentBrightGreenBrush}"
                                       ToolTip="New Chat"
                                       Width="32" Height="32">
                                    <materialDesign:PackIcon Kind="Plus" Height="20" Width="20"/>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <!-- Content Area -->
                        <Grid Grid.Row="1">
                            <!-- Chats List -->
                            <ListView x:Name="ChatsListView" 
                                    ItemsSource="{Binding ChatThreads}"
                                    Style="{StaticResource MaterialDesignListView}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="0,0,0,0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Contact Avatar -->
                                            <Border Width="48" Height="48" 
                                                   Background="{StaticResource MatchaGreenBrush}" 
                                                   CornerRadius="24" 
                                                   materialDesign:ElevationAssist.Elevation="Dp2">
                                                <TextBlock Text="{Binding Contact.Initials}" 
                                                         VerticalAlignment="Center" 
                                                         HorizontalAlignment="Center" 
                                                         FontWeight="Bold"/>
                                            </Border>
                                            
                                            <!-- Contact Info -->
                                            <StackPanel Grid.Column="1" Margin="12,0">
                                                <TextBlock Text="{Binding Contact.DisplayName}" 
                                                         FontWeight="Bold" 
                                                         Foreground="{StaticResource NeutralWhiteBrush}"/>
                                                <TextBlock Text="{Binding LastMessageText}" 
                                                         TextTrimming="CharacterEllipsis"
                                                         Foreground="{StaticResource NeutralGrayBrush}"
                                                         FontSize="12"/>
                                            </StackPanel>
                                            
                                            <!-- Time and Unread Count -->
                                            <StackPanel Grid.Column="2" 
                                                      HorizontalAlignment="Right" 
                                                      VerticalAlignment="Top">
                                                <TextBlock Text="{Binding LastMessageTime, StringFormat=HH:mm}" 
                                                         FontSize="12"
                                                         Foreground="{StaticResource NeutralGrayBrush}"/>
                                                <Border Background="{StaticResource AccentBrightGreenBrush}" 
                                                       CornerRadius="12" 
                                                       Width="24" Height="24"
                                                       Margin="0,4,0,0"
                                                       Visibility="{Binding UnreadCount, Converter={StaticResource IntToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding UnreadCount}" 
                                                             VerticalAlignment="Center" 
                                                             HorizontalAlignment="Center" 
                                                             FontSize="12"
                                                             FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            
                            <!-- Contacts List -->
                            <ListView x:Name="ContactsListView" 
                                    ItemsSource="{Binding Contacts}"
                                    Style="{StaticResource MaterialDesignListView}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="0,0,0,0"
                                    Visibility="Collapsed">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="8,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Contact Avatar -->
                                            <Border Width="48" Height="48" 
                                                   Background="{StaticResource MatchaGreenBrush}" 
                                                   CornerRadius="24" 
                                                   materialDesign:ElevationAssist.Elevation="Dp2">
                                                <TextBlock Text="{Binding Initials}" 
                                                         VerticalAlignment="Center" 
                                                         HorizontalAlignment="Center" 
                                                         FontWeight="Bold"/>
                                            </Border>
                                            
                                            <!-- Contact Info -->
                                            <StackPanel Grid.Column="1" Margin="12,0">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                         FontWeight="Bold" 
                                                         Foreground="{StaticResource NeutralWhiteBrush}"/>
                                                <TextBlock Text="{Binding IsOnline, Converter={StaticResource BoolToStatusConverter}}"
                                                         Foreground="{Binding IsOnline, Converter={StaticResource BoolToStatusColorConverter}}"
                                                         FontSize="12"/>
                                            </StackPanel>
                                            
                                            <!-- Last Seen -->
                                            <TextBlock Grid.Column="2" 
                                                     Text="{Binding LastSeen, StringFormat=HH:mm}" 
                                                     FontSize="12"
                                                     Foreground="{StaticResource NeutralGrayBrush}"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Right Panel - Chat Area -->
                <Grid Grid.Column="1" Background="#1A1A1A">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Chat Header -->
                    <Border Grid.Row="0" 
                           Background="#252525" 
                           Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Border Width="40" Height="40" 
                                       Background="{StaticResource MatchaGreenBrush}" 
                                       CornerRadius="20" 
                                       materialDesign:ElevationAssist.Elevation="Dp2">
                                    <TextBlock Text="{Binding CurrentContact.Initials}" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center" 
                                             FontWeight="Bold"/>
                                </Border>
                                
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="{Binding CurrentContact.DisplayName}" 
                                             FontWeight="Bold" 
                                             Foreground="{StaticResource NeutralWhiteBrush}"/>
                                    <TextBlock Text="{Binding CurrentContact.IsOnline, Converter={StaticResource BoolToStatusConverter}}"
                                             Foreground="{Binding CurrentContact.IsOnline, Converter={StaticResource BoolToStatusColorConverter}}"
                                             FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto"
                                Padding="16">
                        <ItemsControl x:Name="MessagesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Background="{Binding IsFromCurrentUser, Converter={StaticResource BoolToMessageBackgroundConverter}}"
                                                CornerRadius="12"
                                                Padding="12,8"
                                                MaxWidth="400"
                                                HorizontalAlignment="{Binding IsFromCurrentUser, Converter={StaticResource BoolToHorizontalAlignmentConverter}}">
                                            <TextBlock Text="{Binding Content}"
                                                     Foreground="{StaticResource NeutralWhiteBrush}"
                                                     TextWrapping="Wrap"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding Timestamp, StringFormat=HH:mm}"
                                                 FontSize="12"
                                                 Foreground="{StaticResource NeutralGrayBrush}"
                                                 Margin="8,0,0,0"
                                                 VerticalAlignment="Bottom"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Message Input -->
                    <Border Grid.Row="2" 
                           Background="#252525" 
                           Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="MessageTextBox"
                                    Style="{StaticResource MaterialDesignTextBox}"
                                    materialDesign:HintAssist.Hint="Type a message..."
                                    Background="#1A1A1A"
                                    BorderThickness="0"
                                    Foreground="{StaticResource NeutralWhiteBrush}"
                                    VerticalAlignment="Center"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MaxHeight="100"/>
                            
                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                                    Background="{StaticResource AccentBrightGreenBrush}"
                                    Foreground="{StaticResource NeutralBlackBrush}"
                                    Margin="16,0,0,0"
                                    Click="SendMessageButton_Click">
                                <materialDesign:PackIcon Kind="Send" Height="24" Width="24"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>

<Application
    x:Class="AntiSwearingChatBox.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Dark"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Custom Brushes  -->
            <SolidColorBrush x:Key="NeutralBlackBrush" Color="#111111" />
            <SolidColorBrush x:Key="NeutralDarkGrayBrush" Color="#252525" />
            <SolidColorBrush x:Key="NeutralGrayBrush" Color="#757575" />
            <SolidColorBrush x:Key="NeutralWhiteBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="AccentBrightGreenBrush" Color="#4CAF50" />
            <SolidColorBrush x:Key="MatchaGreenBrush" Color="#81C784" />
            <SolidColorBrush x:Key="MessageBackgroundBrush" Color="#2A2A2A" />
            <SolidColorBrush x:Key="MessageSentBackgroundBrush" Color="#4CAF50" />
            <SolidColorBrush x:Key="MessageReceivedBackgroundBrush" Color="#252525" />

        </ResourceDictionary>
    </Application.Resources>
</Application>

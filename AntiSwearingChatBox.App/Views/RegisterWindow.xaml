<Window x:Class="AntiSwearingChatBox.App.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Register - AntiSwearingChatBox" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="InputBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Padding" Value="12,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#121212"/>
            <Setter Property="CaretBrush" Value="#BCD9B4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignPasswordBox}">
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Padding" Value="12,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#121212"/>
            <Setter Property="CaretBrush" Value="#BCD9B4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="BorderBrush" Value="#BCD9B4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" BlurRadius="3" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SocialButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#F8F5FF"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
        </Style>
        
        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Direction="270" BlurRadius="3" Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="FeatureIconStyle" TargetType="Border">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#151515"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style x:Key="WindowBarButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2196F3" Padding="20">
            <TextBlock Text="Create Account" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Registration Form -->
        <StackPanel Grid.Row="1" 
                    Margin="40" 
                    VerticalAlignment="Center">
            <TextBlock Text="Username" 
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameTextBox" 
                     Margin="0,0,0,15" 
                     Padding="10"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"/>

            <TextBlock Text="Email" 
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold"/>
            <TextBox x:Name="EmailTextBox" 
                     Margin="0,0,0,15" 
                     Padding="10"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"/>

            <TextBlock Text="Password" 
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" 
                        Margin="0,0,0,15" 
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"/>

            <TextBlock Text="Confirm Password" 
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                        Margin="0,0,0,15" 
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"/>

            <TextBlock Text="Gender (Optional)" 
                       Margin="0,0,0,5" 
                       FontWeight="SemiBold"/>
            <ComboBox x:Name="GenderComboBox" 
                      Margin="0,0,0,20" 
                      Padding="10"
                      BorderThickness="1"
                      BorderBrush="#DDDDDD">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <Button x:Name="RegisterButton" 
                    Content="Register" 
                    Background="#2196F3" 
                    Foreground="White" 
                    Padding="15" 
                    Margin="0,0,0,10"
                    Click="RegisterButton_Click"/>

            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Background="Transparent" 
                    Foreground="#2196F3" 
                    Padding="15" 
                    BorderThickness="1"
                    BorderBrush="#2196F3"
                    Click="CancelButton_Click"/>

            <TextBlock x:Name="ErrorMessage" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window> 
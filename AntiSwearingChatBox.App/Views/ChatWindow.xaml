<Window
    x:Class="AntiSwearingChatBox.App.Views.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Chat - Anti-Swearing Chat Box"
    Width="1600"
    Height="900"
    MinWidth="1280"
    MinHeight="720"
    MaxWidth="1920"
    MaxHeight="1080"
    AllowsTransparency="True"
    Background="#0A0A0A"
    BorderThickness="0"
    FontFamily="Segoe UI"
    ResizeMode="CanResizeWithGrip"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="#F8F5FF"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="WindowBarButtonStyle"
            BasedOn="{StaticResource MaterialDesignIconButton}"
            TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Custom Window Bar  -->
        <Border
            Grid.Row="0"
            Background="#111111"
            BorderBrush="#1E1E1E"
            BorderThickness="0,0,0,1"
            MouseDown="Border_MouseDown">
            <Grid>
                <StackPanel
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Width="16"
                        Height="16"
                        Margin="0,0,8,0"
                        Background="#121212"
                        CornerRadius="8">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="#BCD9B4"
                            Text="A" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="#B3B3B3"
                        Text="Anti-Swearing Chat - John Doe" />
                </StackPanel>

                <StackPanel
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="4,0"
                        Click="MinimizeButton_Click"
                        Style="{StaticResource WindowBarButtonStyle}">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Foreground="#B3B3B3"
                            Kind="Minus" />
                    </Button>
                    <Button
                        Margin="4,0"
                        Click="MaximizeButton_Click"
                        Style="{StaticResource WindowBarButtonStyle}">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Foreground="#B3B3B3"
                            Kind="Fullscreen" />
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Margin="4,0"
                        Click="CloseButton_Click"
                        Style="{StaticResource WindowBarButtonStyle}">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Foreground="#B3B3B3"
                            Kind="Close" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Sidebar with chat list  -->
            <Border
                Grid.Column="0"
                Background="#0C0C0C"
                BorderBrush="#1E1E1E"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Search Bar  -->
                    <Border
                        Grid.Row="0"
                        Padding="16,16,16,10"
                        Background="#0C0C0C">
                        <Border
                            Padding="0"
                            Background="#111111"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="#616161"
                                    Kind="Magnify" />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="8,8,12,8"
                                    materialDesign:HintAssist.Hint="Search"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CaretBrush="#BCD9B4"
                                    Foreground="#B3B3B3" />
                            </Grid>
                        </Border>
                    </Border>

                    <!--  Conversation List  -->
                    <ScrollViewer
                        Grid.Row="1"
                        Padding="16,0"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock
                                Margin="4,16,0,12"
                                FontSize="11"
                                Foreground="#616161"
                                Text="CHATS" />

                            <!--  Active Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12"
                                Background="#111111"
                                BorderBrush="#BCD9B4"
                                BorderThickness="1"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#151515"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#BCD9B4"
                                            Text="JD" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="#F8F5FF"
                                            Text="John Doe" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#B3B3B3"
                                            Text="Let's meet tomorrow at 2pm"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="#BCD9B4"
                                                Text="12:42 PM" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Regular Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12"
                                Background="#0D0D0D"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#151515"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#B3B3B3"
                                            Text="GT" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="#F8F5FF"
                                            Text="Group Team" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#B3B3B3"
                                            Text="Alice: I've sent the files"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="#616161"
                                                Text="10:22 AM" />
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Right"
                                                Background="#151515"
                                                CornerRadius="8">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="9"
                                                    Foreground="#BCD9B4"
                                                    Text="3" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Add more conversations with similar styling  -->
                            <Border
                                Margin="0,3"
                                Padding="12"
                                Background="#0D0D0D"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#151515"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#B3B3B3"
                                            Text="JS" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="#F8F5FF"
                                            Text="Jane Smith" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#B3B3B3"
                                            Text="Thanks for your help!"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  User Profile  -->
                    <Border
                        Grid.Row="2"
                        Margin="16,8,16,16"
                        Padding="12"
                        Background="#111111"
                        CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="36"
                                Height="36"
                                Margin="0,0,10,0"
                                Background="#151515"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#BCD9B4"
                                    Text="Me" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#F8F5FF"
                                    Text="User Name" />
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Margin="0,0,6,0"
                                        VerticalAlignment="Center"
                                        Fill="#BCD9B4" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#B3B3B3"
                                        Text="Online" />
                                </StackPanel>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Width="28"
                                Height="28"
                                Padding="0"
                                Background="Transparent"
                                Style="{StaticResource MaterialDesignIconButton}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="DotsVertical" />
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Column="1" />

            <!--  Main Chat Area  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Chat Header  -->
                <Border
                    Grid.Row="0"
                    Background="#0E0E0E"
                    BorderBrush="#1E1E1E"
                    BorderThickness="0,0,0,1">
                    <Grid Margin="20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <Border
                                Width="40"
                                Height="40"
                                Margin="0,0,12,0"
                                Background="#121212"
                                CornerRadius="20">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#BCD9B4"
                                    Text="JD" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Foreground="#F8F5FF"
                                    Text="John Doe" />
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Margin="0,0,6,0"
                                        VerticalAlignment="Center"
                                        Fill="#BCD9B4" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#B3B3B3"
                                        Text="Online" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Margin="4,0" Style="{StaticResource WindowBarButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="Phone" />
                            </Button>
                            <Button Margin="4,0" Style="{StaticResource WindowBarButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="Video" />
                            </Button>
                            <Button Margin="4,0" Style="{StaticResource WindowBarButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="DotsVertical" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Messages Area  -->
                <Grid 
                    Grid.Row="1"
                    Margin="24,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Dashboard Stats Cards -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Messages Stat Card -->
                        <Border Grid.Column="0" Margin="0,0,10,0" Background="#111111" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Total Messages" FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="1,248" FontSize="22" FontWeight="SemiBold" Foreground="#F8F5FF" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Row="0" Grid.Column="1" Background="#151515" Width="40" Height="40" CornerRadius="8">
                                    <materialDesign:PackIcon Kind="MessageText" Width="20" Height="20" 
                                                           Foreground="#BCD9B4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                                    <materialDesign:PackIcon Kind="TrendingUp" Width="14" Height="14" Foreground="#BCD9B4" VerticalAlignment="Center"/>
                                    <TextBlock Text="+12% " FontSize="11" Foreground="#BCD9B4" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="from last week" FontSize="11" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Users Stat Card -->
                        <Border Grid.Column="1" Margin="10,0" Background="#111111" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Active Users" FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="32" FontSize="22" FontWeight="SemiBold" Foreground="#F8F5FF" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Row="0" Grid.Column="1" Background="#151515" Width="40" Height="40" CornerRadius="8">
                                    <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" 
                                                           Foreground="#BCD9B4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                                    <materialDesign:PackIcon Kind="TrendingUp" Width="14" Height="14" Foreground="#BCD9B4" VerticalAlignment="Center"/>
                                    <TextBlock Text="+5% " FontSize="11" Foreground="#BCD9B4" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="from last week" FontSize="11" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Swear Words Stat Card -->
                        <Border Grid.Column="2" Margin="10,0" Background="#111111" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Swear Words Blocked" FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="128" FontSize="22" FontWeight="SemiBold" Foreground="#F8F5FF" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Row="0" Grid.Column="1" Background="#151515" Width="40" Height="40" CornerRadius="8">
                                    <materialDesign:PackIcon Kind="ShieldAlert" Width="20" Height="20" 
                                                           Foreground="#BCD9B4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                                    <materialDesign:PackIcon Kind="TrendingDown" Width="14" Height="14" Foreground="#BCD9B4" VerticalAlignment="Center"/>
                                    <TextBlock Text="-8% " FontSize="11" Foreground="#BCD9B4" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="from last week" FontSize="11" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Performance Stat Card -->
                        <Border Grid.Column="3" Margin="10,0,0,0" Background="#111111" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="System Accuracy" FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="98.4%" FontSize="22" FontWeight="SemiBold" Foreground="#F8F5FF" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Row="0" Grid.Column="1" Background="#151515" Width="40" Height="40" CornerRadius="8">
                                    <materialDesign:PackIcon Kind="ChartLineVariant" Width="20" Height="20" 
                                                           Foreground="#BCD9B4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                                    <materialDesign:PackIcon Kind="TrendingUp" Width="14" Height="14" Foreground="#BCD9B4" VerticalAlignment="Center"/>
                                    <TextBlock Text="+1.2% " FontSize="11" Foreground="#BCD9B4" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="from last week" FontSize="11" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- Activity Chart Section -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Activity Chart -->
                        <Border Grid.Column="0" Margin="0,0,10,0" Background="#111111" CornerRadius="8" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Weekly Activity" FontSize="14" FontWeight="SemiBold" Foreground="#F8F5FF"/>
                                <TextBlock Grid.Row="1" Text="Messages per day" FontSize="11" Foreground="#B3B3B3" Margin="0,2,0,16"/>
                                
                                <!-- Simplified Chart Visualization -->
                                <Grid Grid.Row="2" Height="150">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Bars -->
                                    <Border Grid.Column="0" Background="#1A2C27" CornerRadius="4" Margin="5,0" VerticalAlignment="Bottom" Height="60">
                                        <Border Background="#BCD9B4" CornerRadius="4" Margin="0" Height="60" VerticalAlignment="Bottom"/>
                                    </Border>
                                    <Border Grid.Column="1" Background="#1A2C27" CornerRadius="4" Margin="5,0" VerticalAlignment="Bottom" Height="100">
                                        <Border Background="#BCD9B4" CornerRadius="4" Margin="0" Height="100" VerticalAlignment="Bottom"/>
                                    </Border>
                                    <Border Grid.Column="2" Background="#1A2C27" CornerRadius="4" Margin="5,0" VerticalAlignment="Bottom" Height="75">
                                        <Border Background="#BCD9B4" CornerRadius="4" Margin="0" Height="75" VerticalAlignment="Bottom"/>
                                    </Border>
                                    <Border Grid.Column="3" Background="#1A2C27" CornerRadius="4" Margin="5,0" VerticalAlignment="Bottom" Height="120">
                                        <Border Background="#BCD9B4" CornerRadius="4" Margin="0" Height="120" VerticalAlignment="Bottom"/>
                                    </Border>
                                    <Border Grid.Column="4" Background="#1A2C27" CornerRadius="4" Margin="5,0" VerticalAlignment="Bottom" Height="80">
                                        <Border Background="#BCD9B4" CornerRadius="4" Margin="0" Height="80" VerticalAlignment="Bottom"/>
                                    </Border>
                                    <Border Grid.Column="5" Background="#1A2C27" CornerRadius="4" Margin="5,0" VerticalAlignment="Bottom" Height="140">

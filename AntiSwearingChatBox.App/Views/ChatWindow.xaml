<Window
    x:Class="AntiSwearingChatBox.App.Views.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Chat - Anti-Swearing Chat Box"
    Width="1600"
    Height="900"
    MinWidth="1280"
    MinHeight="720"
    MaxWidth="1920"
    MaxHeight="1080"
    AllowsTransparency="True"
    Background="#0A0A0A"
    BorderThickness="0"
    FontFamily="Segoe UI"
    ResizeMode="CanResizeWithGrip"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="#F8F5FF"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="WindowBarButtonStyle"
            BasedOn="{StaticResource MaterialDesignIconButton}"
            TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Custom Window Bar  -->
        <Border
            Grid.Row="0"
            Background="#111111"
            BorderBrush="#1E1E1E"
            BorderThickness="0,0,0,1"
            MouseDown="Border_MouseDown">
            <Grid>
                <StackPanel
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Width="16"
                        Height="16"
                        Margin="0,0,8,0"
                        Background="#121212"
                        CornerRadius="8">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="#BCD9B4"
                            Text="A" />
                    </Border>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="11"
                        Foreground="#B3B3B3"
                        Text="Anti-Swearing Chat - John Doe" />
                </StackPanel>

                <StackPanel
                    Margin="0,0,8,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="4,0"
                        Click="MinimizeButton_Click"
                        Style="{StaticResource WindowBarButtonStyle}">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Foreground="#B3B3B3"
                            Kind="Minus" />
                    </Button>
                    <Button
                        Margin="4,0"
                        Click="MaximizeButton_Click"
                        Style="{StaticResource WindowBarButtonStyle}">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Foreground="#B3B3B3"
                            Kind="Fullscreen" />
                    </Button>
                    <Button
                        x:Name="btnClose"
                        Margin="4,0"
                        Click="CloseButton_Click"
                        Style="{StaticResource WindowBarButtonStyle}">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Foreground="#B3B3B3"
                            Kind="Close" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Sidebar with chat list  -->
            <Border
                Grid.Column="0"
                Background="#0C0C0C"
                BorderBrush="#1E1E1E"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Search Bar  -->
                    <Border
                        Grid.Row="0"
                        Padding="16,16,16,10"
                        Background="#0C0C0C">
                        <Border
                            Padding="0"
                            Background="#111111"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="#616161"
                                    Kind="Magnify" />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="8,8,12,8"
                                    materialDesign:HintAssist.Hint="Search"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CaretBrush="#BCD9B4"
                                    Foreground="#B3B3B3" />
                            </Grid>
                        </Border>
                    </Border>

                    <!--  Conversation List  -->
                    <ScrollViewer
                        Grid.Row="1"
                        Padding="16,0"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock
                                Margin="4,16,0,12"
                                FontSize="11"
                                Foreground="#616161"
                                Text="CHATS" />

                            <!--  Active Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12"
                                Background="#111111"
                                BorderBrush="#BCD9B4"
                                BorderThickness="1"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#151515"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#BCD9B4"
                                            Text="JD" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="#F8F5FF"
                                            Text="John Doe" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#B3B3B3"
                                            Text="Let's meet tomorrow at 2pm"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="#BCD9B4"
                                                Text="12:42 PM" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Regular Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12"
                                Background="#0D0D0D"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#151515"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#B3B3B3"
                                            Text="GT" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="#F8F5FF"
                                            Text="Group Team" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#B3B3B3"
                                            Text="Alice: I've sent the files"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="#616161"
                                                Text="10:22 AM" />
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Right"
                                                Background="#151515"
                                                CornerRadius="8">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="9"
                                                    Foreground="#BCD9B4"
                                                    Text="3" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Add more conversations with similar styling  -->
                            <Border
                                Margin="0,3"
                                Padding="12"
                                Background="#0D0D0D"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="#151515"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#B3B3B3"
                                            Text="JS" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="#F8F5FF"
                                            Text="Jane Smith" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="#B3B3B3"
                                            Text="Thanks for your help!"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  User Profile  -->
                    <Border
                        Grid.Row="2"
                        Margin="16,8,16,16"
                        Padding="12"
                        Background="#111111"
                        CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="36"
                                Height="36"
                                Margin="0,0,10,0"
                                Background="#151515"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#BCD9B4"
                                    Text="Me" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#F8F5FF"
                                    Text="User Name" />
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Margin="0,0,6,0"
                                        VerticalAlignment="Center"
                                        Fill="#BCD9B4" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#B3B3B3"
                                        Text="Online" />
                                </StackPanel>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                Width="28"
                                Height="28"
                                Padding="0"
                                Background="Transparent"
                                Style="{StaticResource MaterialDesignIconButton}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="DotsVertical" />
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Column="1" />

            <!--  Main Chat Area  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Chat Header  -->
                <Border
                    Grid.Row="0"
                    Background="#0E0E0E"
                    BorderBrush="#1E1E1E"
                    BorderThickness="0,0,0,1">
                    <Grid Margin="20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <Border
                                Width="40"
                                Height="40"
                                Margin="0,0,12,0"
                                Background="#121212"
                                CornerRadius="20">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#BCD9B4"
                                    Text="JD" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Foreground="#F8F5FF"
                                    Text="John Doe" />
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Margin="0,0,6,0"
                                        VerticalAlignment="Center"
                                        Fill="#BCD9B4" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#B3B3B3"
                                        Text="Online" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Margin="4,0" Style="{StaticResource WindowBarButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="Phone" />
                            </Button>
                            <Button Margin="4,0" Style="{StaticResource WindowBarButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="Video" />
                            </Button>
                            <Button Margin="4,0" Style="{StaticResource WindowBarButtonStyle}">
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Foreground="#B3B3B3"
                                    Kind="DotsVertical" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Messages Area  -->
                <ScrollViewer
                    Grid.Row="1"
                    Margin="24,16"
                    Padding="24,16"
                    Background="#0A0A0A"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  System Message  -->
                        <Border
                            MaxWidth="560"
                            Margin="0,8"
                            Padding="14"
                            HorizontalAlignment="Center"
                            Background="#111111"
                            BorderBrush="#1E1E1E"
                            BorderThickness="1"
                            CornerRadius="4"
                            Effect="{DynamicResource MaterialDesignShadowDepth1}">
                            <TextBlock
                                FontSize="12"
                                Foreground="#B3B3B3"
                                Text="This conversation is being monitored for inappropriate language. Please keep it civil."
                                TextWrapping="Wrap" />
                        </Border>

                        <!--  Timestamp  -->
                        <Border
                            Margin="0,16"
                            Padding="8,3"
                            HorizontalAlignment="Center"
                            Background="#111111"
                            BorderBrush="#1E1E1E"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="10"
                                Foreground="#616161"
                                Text="Today, 12:30 PM" />
                        </Border>

                        <!--  Received Message - Matte Black  -->
                        <Grid Margin="0,8" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="32"
                                Height="32"
                                Margin="0,0,12,0"
                                VerticalAlignment="Top"
                                Background="#151515"
                                CornerRadius="16">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#B3B3B3"
                                    Text="JD" />
                            </Border>

                            <StackPanel Grid.Column="1">
                                <Border
                                    MaxWidth="450"
                                    Padding="14"
                                    Background="#111111"
                                    CornerRadius="0,4,4,4"
                                    Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#F8F5FF"
                                        Text="Hi there! How are you doing today? I wanted to talk about our project."
                                        TextWrapping="Wrap" />
                                </Border>
                                <TextBlock
                                    Margin="8,4,0,0"
                                    FontSize="10"
                                    Foreground="#616161"
                                    Text="12:32 PM" />
                            </StackPanel>
                        </Grid>

                        <!--  Sent Message - Matte Black with Matcha Green Outline  -->
                        <Grid Margin="0,16" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                                <Border
                                    MaxWidth="450"
                                    Padding="14"
                                    Background="#111111"
                                    BorderBrush="#BCD9B4"
                                    BorderThickness="1"
                                    CornerRadius="4,0,4,4"
                                    Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#F8F5FF"
                                        Text="Hey, I'm doing great! I've been working on the project. I've made some progress with the UI design."
                                        TextWrapping="Wrap" />
                                </Border>
                                <StackPanel
                                    Margin="0,4,8,0"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#616161"
                                        Text="12:34 PM" />
                                    <materialDesign:PackIcon
                                        Width="12"
                                        Height="12"
                                        Margin="4,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="#BCD9B4"
                                        Kind="CheckAll" />
                                </StackPanel>
                            </StackPanel>

                            <Border
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="12,0,0,0"
                                VerticalAlignment="Top"
                                Background="#151515"
                                CornerRadius="16">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#BCD9B4"
                                    Text="Me" />
                            </Border>
                        </Grid>

                        <!--  Received Message  -->
                        <Grid Margin="0,16" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="32"
                                Height="32"
                                Margin="0,0,12,0"
                                VerticalAlignment="Top"
                                Background="#151515"
                                CornerRadius="16">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#B3B3B3"
                                    Text="JD" />
                            </Border>

                            <StackPanel Grid.Column="1">
                                <Border
                                    MaxWidth="450"
                                    Padding="14"
                                    Background="#111111"
                                    CornerRadius="0,4,4,4"
                                    Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#F8F5FF"
                                        Text="That sounds great! Can you share your progress sometime this week? I'd love to see what you've done."
                                        TextWrapping="Wrap" />
                                </Border>
                                <TextBlock
                                    Margin="8,4,0,0"
                                    FontSize="10"
                                    Foreground="#616161"
                                    Text="12:36 PM" />
                            </StackPanel>
                        </Grid>

                        <!--  Sent Message - Matte Black with Matcha Green Outline  -->
                        <Grid Margin="0,16" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                                <Border
                                    MaxWidth="450"
                                    Padding="14"
                                    Background="#111111"
                                    BorderBrush="#BCD9B4"
                                    BorderThickness="1"
                                    CornerRadius="4,0,4,4"
                                    Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#F8F5FF"
                                        Text="Sure thing! I'll share the Figma designs tomorrow morning. Let me know what you think."
                                        TextWrapping="Wrap" />
                                </Border>
                                <StackPanel
                                    Margin="0,4,8,0"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#616161"
                                        Text="12:38 PM" />
                                    <materialDesign:PackIcon
                                        Width="12"
                                        Height="12"
                                        Margin="4,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="#BCD9B4"
                                        Kind="CheckAll" />
                                </StackPanel>
                            </StackPanel>

                            <Border
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="12,0,0,0"
                                VerticalAlignment="Top"
                                Background="#151515"
                                CornerRadius="16">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#BCD9B4"
                                    Text="Me" />
                            </Border>
                        </Grid>

                        <!--  Typing Indicator  -->
                        <Grid Margin="0,16" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="32"
                                Height="32"
                                Margin="0,0,12,0"
                                VerticalAlignment="Top"
                                Background="#151515"
                                CornerRadius="16">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="#B3B3B3"
                                    Text="JD" />
                            </Border>

                            <Border
                                Grid.Column="1"
                                Padding="14,10"
                                Background="#111111"
                                CornerRadius="0,4,4,4"
                                Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse
                                        Width="7"
                                        Height="7"
                                        Margin="0,0,3,0"
                                        Fill="#F8F5FF">
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="1.0"
                                                            To="0.3"
                                                            Duration="0:0:0.6" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                    <Ellipse
                                        Width="7"
                                        Height="7"
                                        Margin="0,0,3,0"
                                        Fill="#F8F5FF">
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard BeginTime="0:0:0.2">
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="1.0"
                                                            To="0.3"
                                                            Duration="0:0:0.6" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                    <Ellipse
                                        Width="7"
                                        Height="7"
                                        Fill="#F8F5FF">
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard BeginTime="0:0:0.4">
                                                        <DoubleAnimation
                                                            AutoReverse="True"
                                                            RepeatBehavior="Forever"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="1.0"
                                                            To="0.3"
                                                            Duration="0:0:0.6" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!--  Message Input Area  -->
                <Grid Grid.Row="2" Margin="24,8,24,16">
                    <Border
                        Padding="14"
                        Background="#111111"
                        BorderBrush="#1E1E1E"
                        BorderThickness="1"
                        CornerRadius="4"
                        Effect="{DynamicResource MaterialDesignShadowDepth1}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Grid.Column="0"
                                MinHeight="36"
                                VerticalContentAlignment="Center"
                                materialDesign:HintAssist.Hint="Type your message here..."
                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                AcceptsReturn="True"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="#BCD9B4"
                                FontSize="13"
                                Foreground="#F8F5FF"
                                TextWrapping="Wrap" />

                            <StackPanel
                                Grid.Column="1"
                                Margin="16,0,0,0"
                                Orientation="Horizontal">
                                <Button Margin="0,0,10,0" Style="{StaticResource WindowBarButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#B3B3B3"
                                        Kind="Paperclip" />
                                </Button>
                                <Button Margin="0,0,16,0" Style="{StaticResource WindowBarButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#B3B3B3"
                                        Kind="EmoticonOutline" />
                                </Button>
                                <Button
                                    Width="70"
                                    Height="36"
                                    materialDesign:ButtonAssist.CornerRadius="4"
                                    Background="#111111"
                                    BorderBrush="#BCD9B4"
                                    BorderThickness="1"
                                    Style="{StaticResource MaterialDesignRaisedButton}">
                                    <materialDesign:PackIcon
                                        Width="18"
                                        Height="18"
                                        Foreground="#BCD9B4"
                                        Kind="Send" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window> 
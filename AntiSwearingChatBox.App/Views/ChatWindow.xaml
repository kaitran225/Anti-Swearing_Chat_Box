<Window x:Class="AntiSwearingChatBox.App.Views.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Chat - Anti-Swearing Chat Box" Height="900" Width="1600"
        MinHeight="720" MinWidth="1280" MaxHeight="1080" MaxWidth="1920"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        TextElement.Foreground="#F8F5FF"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        BorderThickness="0">

    <Window.Resources>
        <Style x:Key="WindowBarButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Window Bar -->
        <Border Grid.Row="0" Background="#111111" BorderThickness="0,0,0,1" BorderBrush="#1E1E1E" MouseDown="Border_MouseDown">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Border Width="16" Height="16" Background="#121212" CornerRadius="8" Margin="0,0,8,0">
                        <TextBlock Text="A" Foreground="#BCD9B4" FontSize="10" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Anti-Swearing Chat - John Doe" FontSize="11" Foreground="#B3B3B3" 
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                    <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0" Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="Minus" Width="16" Height="16" Foreground="#B3B3B3"/>
                    </Button>
                    <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0" Click="MaximizeButton_Click">
                        <materialDesign:PackIcon Kind="Fullscreen" Width="16" Height="16" Foreground="#B3B3B3"/>
                    </Button>
                    <Button x:Name="btnClose" Style="{StaticResource WindowBarButtonStyle}" Margin="4,0" Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="#B3B3B3"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Sidebar with chat list -->
            <Border Grid.Column="0" Background="#0C0C0C" BorderThickness="0,0,1,0" BorderBrush="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Bar -->
                    <Border Grid.Row="0" Background="#0C0C0C" Padding="16,16,16,10">
                        <Border Background="#111111" CornerRadius="4" Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="12,0,0,0" 
                                                       VerticalAlignment="Center" Foreground="#616161"/>
                                <TextBox Grid.Column="1" Margin="8,8,12,8" BorderThickness="0" Background="Transparent"
                                         Foreground="#B3B3B3" materialDesign:HintAssist.Hint="Search"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                         CaretBrush="#BCD9B4"/>
                            </Grid>
                        </Border>
                    </Border>
                    
                    <!-- Conversation List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,0">
                        <StackPanel>
                            <TextBlock Text="CHATS" FontSize="11" Foreground="#616161" Margin="4,16,0,12"/>
                            
                            <!-- Active Conversation -->
                            <Border Background="#111111" Margin="0,3" Padding="12" CornerRadius="4" BorderBrush="#BCD9B4" 
                                    BorderThickness="1" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="36" Height="36" CornerRadius="18" Background="#151515" Margin="0,0,10,0">
                                        <TextBlock Text="JD" Foreground="#BCD9B4" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12"/>
                                    </Border>
                                    
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="John Doe" FontWeight="SemiBold" Foreground="#F8F5FF" FontSize="13"/>
                                        <TextBlock Grid.Row="1" Text="Let's meet tomorrow at 2pm" Foreground="#B3B3B3" 
                                                   TextTrimming="CharacterEllipsis" Margin="0,4,0,0" FontSize="12"/>
                                        
                                        <StackPanel Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Top" Margin="6,0,0,0">
                                            <TextBlock Text="12:42 PM" FontSize="10" Foreground="#BCD9B4" 
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- Regular Conversation -->
                            <Border Background="#0D0D0D" Margin="0,3" Padding="12" CornerRadius="4" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="36" Height="36" CornerRadius="18" Background="#151515" Margin="0,0,10,0">
                                        <TextBlock Text="GT" Foreground="#B3B3B3" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12"/>
                                    </Border>
                                    
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="Group Team" FontWeight="SemiBold" Foreground="#F8F5FF" FontSize="13"/>
                                        <TextBlock Grid.Row="1" Text="Alice: I've sent the files" Foreground="#B3B3B3" 
                                                   TextTrimming="CharacterEllipsis" Margin="0,4,0,0" FontSize="12"/>
                                        
                                        <StackPanel Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Top" Margin="6,0,0,0">
                                            <TextBlock Text="10:22 AM" FontSize="10" Foreground="#616161" 
                                                       HorizontalAlignment="Right"/>
                                            <Border Background="#151515" CornerRadius="8" Width="16" Height="16" 
                                                    HorizontalAlignment="Right" Margin="0,4,0,0">
                                                <TextBlock Text="3" FontSize="9" Foreground="#BCD9B4" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- Add more conversations with similar styling -->
                            <Border Background="#0D0D0D" Margin="0,3" Padding="12" CornerRadius="4" Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="36" Height="36" CornerRadius="18" Background="#151515" Margin="0,0,10,0">
                                        <TextBlock Text="JS" Foreground="#B3B3B3" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12"/>
                                    </Border>
                                    
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Text="Jane Smith" FontWeight="SemiBold" Foreground="#F8F5FF" FontSize="13"/>
                                        <TextBlock Grid.Row="1" Text="Thanks for your help!" Foreground="#B3B3B3" 
                                                   TextTrimming="CharacterEllipsis" Margin="0,4,0,0" FontSize="12"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- User Profile -->
                    <Border Grid.Row="2" Background="#111111" Margin="16,8,16,16" CornerRadius="4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="36" Height="36" CornerRadius="18" Background="#151515" Margin="0,0,10,0">
                                <TextBlock Text="Me" Foreground="#BCD9B4" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="User Name" FontWeight="SemiBold" Foreground="#F8F5FF" FontSize="13"/>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#BCD9B4" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Online" FontSize="11" Foreground="#B3B3B3"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}" 
                                    Width="28" Height="28" Padding="0" Background="Transparent">
                                <materialDesign:PackIcon Kind="DotsVertical" Width="16" Height="16" Foreground="#B3B3B3"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Main Chat Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chat Header -->
                <Border Grid.Row="0" Background="#0E0E0E" BorderThickness="0,0,0,1" BorderBrush="#1E1E1E">
                    <Grid Margin="20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="40" Height="40" CornerRadius="20" Background="#121212" Margin="0,0,12,0">
                                <TextBlock Text="JD" Foreground="#BCD9B4" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="John Doe" FontSize="15" FontWeight="SemiBold" Foreground="#F8F5FF"/>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="#BCD9B4" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Online" FontSize="11" Foreground="#B3B3B3"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0">
                                <materialDesign:PackIcon Kind="Phone" Width="16" Height="16" Foreground="#B3B3B3"/>
                            </Button>
                            <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0">
                                <materialDesign:PackIcon Kind="Video" Width="16" Height="16" Foreground="#B3B3B3"/>
                            </Button>
                            <Button Style="{StaticResource WindowBarButtonStyle}" Margin="4,0">
                                <materialDesign:PackIcon Kind="DotsVertical" Width="16" Height="16" Foreground="#B3B3B3"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Messages Area -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,16" Background="#0A0A0A">
                    <StackPanel>
                        <!-- System Message -->
                        <Border Background="#111111" BorderBrush="#1E1E1E" BorderThickness="1" CornerRadius="4" Padding="14" 
                                MaxWidth="560" Margin="0,8" HorizontalAlignment="Center"
                                Effect="{DynamicResource MaterialDesignShadowDepth1}">
                            <TextBlock Text="This conversation is being monitored for inappropriate language. Please keep it civil." 
                                       Foreground="#B3B3B3" TextWrapping="Wrap" FontSize="12"/>
                        </Border>
                        
                        <!-- Timestamp -->
                        <Border Background="#111111" CornerRadius="4" Padding="8,3" Margin="0,16"
                                HorizontalAlignment="Center" BorderBrush="#1E1E1E" BorderThickness="1">
                            <TextBlock Text="Today, 12:30 PM" FontSize="10" Foreground="#616161"/>
                        </Border>
                        
                        <!-- Received Message - Matte Black -->
                        <Grid Margin="0,8" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="32" Height="32" CornerRadius="16" Background="#151515" 
                                    VerticalAlignment="Top" Margin="0,0,12,0">
                                <TextBlock Text="JD" Foreground="#B3B3B3" FontSize="11" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <Border Background="#111111" CornerRadius="0,4,4,4" Padding="14" MaxWidth="450"
                                        Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock Text="Hi there! How are you doing today? I wanted to talk about our project." 
                                               Foreground="#F8F5FF" TextWrapping="Wrap" FontSize="13"/>
                                </Border>
                                <TextBlock Text="12:32 PM" FontSize="10" Foreground="#616161" Margin="8,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Sent Message - Matte Black with Matcha Green Outline -->
                        <Grid Margin="0,16" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                                <Border Background="#111111" BorderBrush="#BCD9B4" BorderThickness="1" 
                                        CornerRadius="4,0,4,4" Padding="14" MaxWidth="450"
                                        Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock Text="Hey, I'm doing great! I've been working on the project. I've made some progress with the UI design." 
                                               Foreground="#F8F5FF" TextWrapping="Wrap" FontSize="13"/>
                                </Border>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,8,0">
                                    <TextBlock Text="12:34 PM" FontSize="10" Foreground="#616161"/>
                                    <materialDesign:PackIcon Kind="CheckAll" Width="12" Height="12" Foreground="#BCD9B4" 
                                                             Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Border Grid.Column="1" Width="32" Height="32" CornerRadius="16" Background="#151515" 
                                    VerticalAlignment="Top" Margin="12,0,0,0">
                                <TextBlock Text="Me" Foreground="#BCD9B4" FontSize="11" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        
                        <!-- Received Message -->
                        <Grid Margin="0,16" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="32" Height="32" CornerRadius="16" Background="#151515" 
                                    VerticalAlignment="Top" Margin="0,0,12,0">
                                <TextBlock Text="JD" Foreground="#B3B3B3" FontSize="11" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1">
                                <Border Background="#111111" CornerRadius="0,4,4,4" Padding="14" MaxWidth="450"
                                        Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock Text="That sounds great! Can you share your progress sometime this week? I'd love to see what you've done." 
                                               Foreground="#F8F5FF" TextWrapping="Wrap" FontSize="13"/>
                                </Border>
                                <TextBlock Text="12:36 PM" FontSize="10" Foreground="#616161" Margin="8,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Sent Message - Matte Black with Matcha Green Outline -->
                        <Grid Margin="0,16" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Right">
                                <Border Background="#111111" BorderBrush="#BCD9B4" BorderThickness="1" 
                                        CornerRadius="4,0,4,4" Padding="14" MaxWidth="450"
                                        Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                    <TextBlock Text="Sure thing! I'll share the Figma designs tomorrow morning. Let me know what you think." 
                                               Foreground="#F8F5FF" TextWrapping="Wrap" FontSize="13"/>
                                </Border>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,8,0">
                                    <TextBlock Text="12:38 PM" FontSize="10" Foreground="#616161"/>
                                    <materialDesign:PackIcon Kind="CheckAll" Width="12" Height="12" Foreground="#BCD9B4" 
                                                             Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Border Grid.Column="1" Width="32" Height="32" CornerRadius="16" Background="#151515" 
                                    VerticalAlignment="Top" Margin="12,0,0,0">
                                <TextBlock Text="Me" Foreground="#BCD9B4" FontSize="11" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        
                        <!-- Typing Indicator -->
                        <Grid Margin="0,16" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="32" Height="32" CornerRadius="16" Background="#151515" 
                                    VerticalAlignment="Top" Margin="0,0,12,0">
                                <TextBlock Text="JD" Foreground="#B3B3B3" FontSize="11" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <Border Grid.Column="1" Background="#111111" CornerRadius="0,4,4,4" Padding="14,10"
                                    Effect="{DynamicResource MaterialDesignShadowDepth1}">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="7" Height="7" Fill="#F8F5FF" Margin="0,0,3,0">
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.3" 
                                                                         Duration="0:0:0.6" AutoReverse="True" RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                    <Ellipse Width="7" Height="7" Fill="#F8F5FF" Margin="0,0,3,0">
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard BeginTime="0:0:0.2">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.3" 
                                                                         Duration="0:0:0.6" AutoReverse="True" RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                    <Ellipse Width="7" Height="7" Fill="#F8F5FF">
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Ellipse.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard BeginTime="0:0:0.4">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.3" 
                                                                         Duration="0:0:0.6" AutoReverse="True" RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Message Input Area -->
                <Grid Grid.Row="2" Margin="24,8,24,16">
                    <Border Background="#111111" CornerRadius="4" Padding="14" 
                            BorderBrush="#1E1E1E" BorderThickness="1"
                            Effect="{DynamicResource MaterialDesignShadowDepth1}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" BorderThickness="0" Background="Transparent" Foreground="#F8F5FF"
                                    materialDesign:HintAssist.Hint="Type your message here..."
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    TextWrapping="Wrap" AcceptsReturn="True" MinHeight="36" FontSize="13"
                                    VerticalContentAlignment="Center" CaretBrush="#BCD9B4"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                                <Button Style="{StaticResource WindowBarButtonStyle}" Margin="0,0,10,0">
                                    <materialDesign:PackIcon Kind="Paperclip" Width="16" Height="16" Foreground="#B3B3B3"/>
                                </Button>
                                <Button Style="{StaticResource WindowBarButtonStyle}" Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="EmoticonOutline" Width="16" Height="16" Foreground="#B3B3B3"/>
                                </Button>
                                <Button Background="#111111" BorderBrush="#BCD9B4" BorderThickness="1" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        materialDesign:ButtonAssist.CornerRadius="4" Height="36" Width="70">
                                    <materialDesign:PackIcon Kind="Send" Width="18" Height="18" Foreground="#BCD9B4"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window> 
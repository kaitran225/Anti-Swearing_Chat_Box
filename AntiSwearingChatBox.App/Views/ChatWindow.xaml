<Window
    x:Class="AntiSwearingChatBox.App.Views.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:components="clr-namespace:AntiSwearingChatBox.App.Components"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Chat - Anti-Swearing Chat Box"
    Width="1600"
    Height="900"
    MinWidth="1280"
    MinHeight="720"
    MaxWidth="1920"
    MaxHeight="1080"
    AllowsTransparency="True"
    Background="{StaticResource PrimaryBackgroundBrush}"
    BorderThickness="0"
    FontFamily="Segoe UI"
    ResizeMode="CanResizeWithGrip"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="WindowBarButtonStyle"
            BasedOn="{StaticResource MaterialDesignIconButton}"
            TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Custom Window Bar -->
        <components:WindowBar Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Sidebar with chat list  -->
            <Border
                Grid.Column="0"
                Background="{StaticResource PrimaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Search Bar  -->
                    <Border
                        Grid.Row="0"
                        Padding="16,12"
                        Background="{StaticResource PrimaryBackgroundBrush}">
                        <Border
                            Padding="0"
                            Background="{StaticResource SecondaryBackgroundBrush}"
                            CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon
                                    Width="16"
                                    Height="16"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Kind="Magnify" />
                                <TextBox
                                    Grid.Column="1"
                                    Margin="8,8,12,8"
                                    materialDesign:HintAssist.Hint="Search conversations"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="13"
                                    CaretBrush="{StaticResource PrimaryGreenBrush}"
                                    Foreground="{StaticResource SecondaryTextBrush}" />
                            </Grid>
                        </Border>
                    </Border>

                    <!--  Conversation List  -->
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="16,12"
                        Padding="16,0,16,0"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Grid Margin="0,12,0,8">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Text="CONVERSATIONS" />
                                <Button
                                    HorizontalAlignment="Right"
                                    Padding="4"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Style="{StaticResource MaterialDesignIconButton}">
                                    <materialDesign:PackIcon
                                        Width="14"
                                        Height="14"
                                        Foreground="{StaticResource TertiaryTextBrush}"
                                        Kind="PlusCircleOutline" />
                                </Button>
                            </Grid>

                            <!--  Active Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12,10"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderBrush="{StaticResource PrimaryGreenBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="{StaticResource TertiaryBackgroundBrush}"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryGreenBrush}"
                                            Text="JD" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="John Doe" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="Let's meet tomorrow at 2pm"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="{StaticResource PrimaryGreenBrush}"
                                                Text="12:42 PM" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Regular Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12,10"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="{StaticResource TertiaryBackgroundBrush}"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="GT" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Group Team" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="Alice: I've sent the files"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="{StaticResource PrimaryGreenBrush}"
                                                Text="10:22 AM" />
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Margin="0,4,0,0"
                                                HorizontalAlignment="Right"
                                                Background="{StaticResource PrimaryGreenBrush}"
                                                CornerRadius="8">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="9"
                                                    Foreground="{StaticResource PrimaryTextBrush}"
                                                    Text="3" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!--  Regular Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12,10"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="{StaticResource TertiaryBackgroundBrush}"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="SJ" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Sarah Johnson" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="Can you review the document?"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="{StaticResource TertiaryTextBrush}"
                                                Text="Tuesday" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <TextBlock
                                Margin="0,20,0,8"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource TertiaryTextBrush}"
                                Text="GROUPS" />

                            <!--  Group Conversation  -->
                            <Border
                                Margin="0,3"
                                Padding="12,10"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                CornerRadius="4"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Width="36"
                                        Height="36"
                                        Margin="0,0,10,0"
                                        Background="{StaticResource TertiaryBackgroundBrush}"
                                        CornerRadius="18">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="PT" />
                                    </Border>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Project Team" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Margin="0,4,0,0"
                                            FontSize="12"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="James: Meeting at 3pm tomorrow"
                                            TextTrimming="CharacterEllipsis" />

                                        <StackPanel
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            VerticalAlignment="Top">
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                FontSize="10"
                                                Foreground="{StaticResource TertiaryTextBrush}"
                                                Text="Yesterday" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Bottom Actions  -->
                    <Border
                        Grid.Row="2"
                        Padding="16,12"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Background="{StaticResource PrimaryBackgroundBrush}">
                        <StackPanel>
                            <Button
                                Padding="10,8"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="Plus" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="New Chat" />
                                </Grid>
                            </Button>

                            <!-- Admin Dashboard Button -->
                            <Button
                                x:Name="AdminDashboardButton"
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="AdminDashboardButton_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="ShieldAccount" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="Admin Dashboard" />
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Column="1" />

            <!--  Main Chat Area  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Chat Header  -->
                <Border
                    Grid.Row="0"
                    Padding="20,12"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Width="40"
                            Height="40"
                            Background="{StaticResource TertiaryBackgroundBrush}"
                            CornerRadius="20">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryGreenBrush}"
                                Text="JD" />
                        </Border>

                        <StackPanel
                            Grid.Column="1"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="John Doe" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="12"
                                Foreground="{StaticResource TertiaryTextBrush}"
                                Text="Active now" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="2"
                            Orientation="Horizontal"
                            Visibility="Visible">
                            <Button
                                Width="36"
                                Height="36"
                                Margin="4,0"
                                Padding="8"
                                materialDesign:ButtonAssist.CornerRadius="18"
                                Background="Transparent"
                                BorderThickness="0">
                                <materialDesign:PackIcon
                                    Width="18"
                                    Height="18"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Kind="Phone" />
                            </Button>
                            <Button
                                Width="36"
                                Height="36"
                                Margin="4,0"
                                Padding="8"
                                materialDesign:ButtonAssist.CornerRadius="18"
                                Background="Transparent"
                                BorderThickness="0">
                                <materialDesign:PackIcon
                                    Width="18"
                                    Height="18"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Kind="Video" />
                            </Button>
                            <Button
                                Width="36"
                                Height="36"
                                Margin="4,0"
                                Padding="8"
                                materialDesign:ButtonAssist.CornerRadius="18"
                                Background="Transparent"
                                BorderThickness="0">
                                <materialDesign:PackIcon
                                    Width="18"
                                    Height="18"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Kind="DotsVertical" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Messages Area  -->
                <Grid Grid.Row="1">
                    <Image Source="/Resources/LoginPage/bg.png" Height="Auto" Width="Auto" Stretch="UniformToFill" Opacity="0.05"/>
                    <Border 
                    Opacity="1"
                    Margin="0,0,0,0">
                        <ScrollViewer
                        Margin="12"
                        Padding="16"
                        VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!--  Received Message  -->
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="16">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Text="JD" />
                                    </Border>
                                    <Border
                                    Grid.Column="1"
                                    MaxWidth="600"
                                    Margin="8,0,0,0"
                                    Padding="14,10"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock
                                            FontSize="13"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Hey there! How's the project coming along? Would you be available for a meeting tomorrow to discuss the next steps?"
                                            TextWrapping="Wrap" />
                                            <TextBlock
                                            HorizontalAlignment="Right"
                                            Margin="0,4,0,0"
                                            FontSize="10"
                                            Foreground="{StaticResource TertiaryTextBrush}"
                                            Text="12:31 PM" />
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!--  Sent Message  -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.Column="1"
                                    MaxWidth="600"
                                    Margin="0,0,8,0"
                                    Padding="14,10"
                                    HorizontalAlignment="Right"
                                    Background="{StaticResource PrimaryBackgroundBrush}"
                                    BorderBrush="{StaticResource PrimaryGreenBrush}" 
                                    BorderThickness="1"
                                    CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock
                                            FontSize="13"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Hi John! The project is going well. I've completed most of the initial requirements. A meeting tomorrow sounds good. How about 2 PM?"
                                            TextWrapping="Wrap" />
                                            <TextBlock
                                            HorizontalAlignment="Right"
                                            Margin="0,4,0,0"
                                            FontSize="10"
                                            Foreground="{StaticResource TertiaryTextBrush}"
                                            Text="12:33 PM" />
                                        </StackPanel>
                                    </Border>
                                    <Border
                                    Grid.Column="2"
                                    Width="32"
                                    Height="32"
                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                    CornerRadius="16">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Text="ME" />
                                    </Border>
                                </Grid>

                                <!--  Received Message  -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="16">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Text="JD" />
                                    </Border>
                                    <Border
                                    Grid.Column="1"
                                    MaxWidth="600"
                                    Margin="8,0,0,0"
                                    Padding="14,10"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock
                                            FontSize="13"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Perfect! 2 PM works for me. I'll set up the meeting and send you the invite. Could you prepare a short summary of what you've done so far?"
                                            TextWrapping="Wrap" />
                                            <TextBlock
                                            HorizontalAlignment="Right"
                                            Margin="0,4,0,0"
                                            FontSize="10"
                                            Foreground="{StaticResource TertiaryTextBrush}"
                                            Text="12:35 PM" />
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!--  Sent Message  -->
                                <Grid Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                    Grid.Column="1"
                                    MaxWidth="600"
                                    Margin="0,0,8,0"
                                    Padding="14,10"
                                    HorizontalAlignment="Right"
                                    Background="{StaticResource PrimaryBackgroundBrush}"
                                    BorderBrush="{StaticResource PrimaryGreenBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                        <StackPanel>
                                            <TextBlock
                                            FontSize="13"
                                            Foreground="{StaticResource PrimaryTextBrush}"
                                            Text="Sure thing! I'll have everything ready. See you tomorrow!"
                                            TextWrapping="Wrap" />
                                            <TextBlock
                                            HorizontalAlignment="Right"
                                            Margin="0,4,0,0"
                                            FontSize="10"
                                            Foreground="{StaticResource TertiaryTextBrush}"
                                            Text="12:36 PM" />
                                        </StackPanel>
                                    </Border>
                                    <Border
                                    Grid.Column="2"
                                    Width="32"
                                    Height="32"
                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                    CornerRadius="16">
                                        <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Text="ME" />
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                </Grid>

                <!--  Message Input Area  -->
                <Border
                    Grid.Row="2"
                    Padding="16,12"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Width="38"
                            Height="38"
                            Padding="7"
                            materialDesign:ButtonAssist.CornerRadius="19"
                            Background="Transparent"
                            BorderThickness="0">
                            <materialDesign:PackIcon
                                Width="18"
                                Height="18"
                                Foreground="{StaticResource TertiaryTextBrush}"
                                Kind="Paperclip" />
                        </Button>

                        <Border
                            Grid.Column="1"
                            Margin="8,0"
                            HorizontalAlignment="Stretch"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBox
                                Padding="12,8"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"

<Window x:Class="AntiSwearingChatBox.App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
        xmlns:components="clr-namespace:AntiSwearingChatBox.App.Components"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Login - Anti-Swearing Chat Box" Height="720" Width="1280"
        MinHeight="720" MinWidth="1280" MaxHeight="1080" MaxWidth="1920"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        TextElement.Foreground="{StaticResource PrimaryTextBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        BorderThickness="0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="58"/>
        </Grid.RowDefinitions>

        <!-- Custom Window Bar -->
        <components:WindowBar Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Illustration/Branding with Background Image -->
            <Grid Grid.Column="0">
                <Image Source="/Resources/LoginPage/bg.png" Stretch="UniformToFill" Opacity="0.4"/>
                <Border Background="#121212" Opacity="0.85"/>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Top Logo Section -->
                    <StackPanel Grid.Row="0" Margin="60,60,0,0" HorizontalAlignment="Left">
                        <TextBlock Text="Anti-Swearing" Style="{StaticResource LogoTextStyle}"/>
                        <TextBlock Text="ChatBox" Style="{StaticResource LogoAccentTextStyle}"/>
                    </StackPanel>
                    
                    <!-- Center Decorative Elements -->
                    <Grid Grid.Row="1" Margin="60,0,60,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Main Heading -->
                        <StackPanel Grid.Row="0" VerticalAlignment="Center">
                            <TextBlock Text="Chat Safe." Style="{StaticResource HeadingTextStyle}"/>
                            <TextBlock Text="Chat Smart." Style="{StaticResource HeadingTextStyle}"/>
                            <TextBlock Text="Chat Clean." FontSize="52" FontWeight="Bold" Foreground="{StaticResource PrimaryGreenBrush}" Margin="0,0,0,24"/>
                            
                            <TextBlock Text="Experience the next level of communication with our advanced anti-swearing technology." 
                                       Style="{StaticResource BodyTextStyle}" MaxWidth="520" LineHeight="24"/>
                        </StackPanel>
                        
                        <!-- Decorative Cards -->
                        <Grid Grid.Row="1" Margin="0,40,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Card 1 -->
                            <Border Grid.Column="0" Style="{StaticResource FeatureCardStyle}" Margin="0,0,16,0">
                                <Grid>
                                    <Border Height="8" Background="{StaticResource PrimaryGreenBrush}" VerticalAlignment="Top" CornerRadius="12,12,0,0"/>
                                    <StackPanel Margin="24,32,24,24">
                                        <Border Width="48" Height="48" Background="{StaticResource PrimaryGreenBrush}" CornerRadius="24" Opacity="0.2" HorizontalAlignment="Left"/>
                                        <TextBlock Text="AI Powered" Style="{StaticResource SubheadingTextStyle}"/>
                                        <TextBlock Text="Our advanced AI technology filters out inappropriate language in real-time." 
                                                  Style="{StaticResource BodyTextStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Card 2 -->
                            <Border Grid.Column="1" Style="{StaticResource FeatureCardStyle}" Margin="8,0,8,0">
                                <Grid>
                                    <Border Height="8" Background="{StaticResource AccentPurpleBrush}" VerticalAlignment="Top" CornerRadius="12,12,0,0"/>
                                    <StackPanel Margin="24,32,24,24">
                                        <Border Width="48" Height="48" Background="{StaticResource AccentPurpleBrush}" CornerRadius="24" Opacity="0.2" HorizontalAlignment="Left"/>
                                        <TextBlock Text="Real-time Filtering" Style="{StaticResource SubheadingTextStyle}"/>
                                        <TextBlock Text="Messages are instantly filtered to ensure a positive chat environment for all users." 
                                                  Style="{StaticResource BodyTextStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            <!-- Card 3 -->
                            <Border Grid.Column="2" Style="{StaticResource FeatureCardStyle}" Margin="16,0,0,0">
                                <Grid>
                                    <Border Height="8" Background="{StaticResource TertiaryBackgroundBrush}" VerticalAlignment="Top" CornerRadius="12,12,0,0"/>
                                    <StackPanel Margin="24,32,24,24">
                                        <Border Width="48" Height="48" Background="{StaticResource TertiaryBackgroundBrush}" CornerRadius="24" Opacity="0.2" HorizontalAlignment="Left"/>
                                        <TextBlock Text="Secure &amp; Private" Style="{StaticResource SubheadingTextStyle}"/>
                                        <TextBlock Text="Your conversations are encrypted and secure, with privacy as our top priority." 
                                                  Style="{StaticResource BodyTextStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Right Side - Login Form -->
            <components:Login Grid.Column="1"/>
        </Grid>

        <components:Footer Grid.Row="2" Loaded="Footer_Loaded"/>
    </Grid>
</Window> 
<Page
    x:Class="AntiSwearingChatBox.App.Views.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AntiSwearingChatBox.App.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dashboard"
    Width="1600"
    Height="900"
    MinWidth="1280"
    MinHeight="720"
    MaxWidth="1920"
    MaxHeight="1080"
    Background="{StaticResource PrimaryBackgroundColor}"
    FontFamily="Segoe UI"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource TextPrimaryColor}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Page.Resources>
        <Style
            x:Key="WindowBarButtonStyle"
            BasedOn="{StaticResource MaterialDesignIconButton}"
            TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="4" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Dashboard Stats Cards  -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Messages Stat Card  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundColor}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Total Messages" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryColor}"
                            Text="1,248" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundColor}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="MessageText" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Text="+12% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Users Stat Card  -->
            <Border
                Grid.Column="1"
                Margin="10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundColor}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Active Users" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryColor}"
                            Text="32" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundColor}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="AccountGroup" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Text="+5% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Swear Words Stat Card  -->
            <Border
                Grid.Column="2"
                Margin="10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundColor}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Swear Words Blocked" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryColor}"
                            Text="128" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundColor}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="ShieldAlert" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="TrendingDown" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Text="-8% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Performance Stat Card  -->
            <Border
                Grid.Column="3"
                Margin="10,0,0,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundColor}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            FontSize="12"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="System Accuracy" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource TextPrimaryColor}"
                            Text="98.4%" />
                    </StackPanel>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        Background="{StaticResource TertiaryBackgroundColor}"
                        CornerRadius="8">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="ChartLineVariant" />
                    </Border>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,12,0,0"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Kind="TrendingUp" />
                        <TextBlock
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource PrimaryAccentColor}"
                            Text="+1.2% " />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="from last week" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  Activity Chart Section  -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!--  Activity Chart  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundColor}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TextPrimaryColor}"
                        Text="Weekly Activity" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,2,0,16"
                        FontSize="11"
                        Foreground="{StaticResource TextSecondaryColor}"
                        Text="Messages per day" />

                    <!--  Simplified Chart Visualization  -->
                    <Grid Grid.Row="2" Height="150">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Bars  -->
                        <Border
                            Grid.Column="0"
                            Height="60"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="60"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>
                        <Border
                            Grid.Column="1"
                            Height="100"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="100"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>
                        <Border
                            Grid.Column="2"
                            Height="75"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="75"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>
                        <Border
                            Grid.Column="3"
                            Height="120"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="120"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>
                        <Border
                            Grid.Column="4"
                            Height="80"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="80"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>
                        <Border
                            Grid.Column="5"
                            Height="140"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="140"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>
                        <Border
                            Grid.Column="6"
                            Height="90"
                            Margin="5,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource SecondaryBackgroundColor}"
                            CornerRadius="4">
                            <Border
                                Height="90"
                                Margin="0"
                                VerticalAlignment="Bottom"
                                Background="{StaticResource PrimaryAccentColor}"
                                CornerRadius="4" />
                        </Border>

                        <!--  Labels  -->
                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Mon" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Tue" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Wed" />
                        <TextBlock
                            Grid.Column="3"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Thu" />
                        <TextBlock
                            Grid.Column="4"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Fri" />
                        <TextBlock
                            Grid.Column="5"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Sat" />
                        <TextBlock
                            Grid.Column="6"
                            Margin="0,0,0,-20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="10"
                            Foreground="{StaticResource TextSecondaryColor}"
                            Text="Sun" />
                    </Grid>
                </Grid>
            </Border>

            <!--  Top Users  -->
            <Border
                Grid.Column="1"
                Margin="10,0,0,0"
                Padding="20"
                Background="{StaticResource SecondaryBackgroundColor}"
                CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource TextPrimaryColor}"
                        Text="Top Active Users" />
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,2,0,16"
                        FontSize="11"
                        Foreground="{StaticResource TextSecondaryColor}"
                        Text="This week" />

                    <StackPanel Grid.Row="2">
                        <!--  User 1  -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="36"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="{StaticResource TertiaryBackgroundColor}"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryAccentColor}"
                                    Text="JD" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryColor}"
                                    Text="John Doe" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    Text="128 messages" />
                            </StackPanel>

                            <Border
                                Grid.Column="2"
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Background="{StaticResource SecondaryBackgroundColor}"
                                CornerRadius="4">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryAccentColor}"
                                    Text="#1" />
                            </Border>
                        </Grid>

                        <!--  User 2  -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="36"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="{StaticResource TertiaryBackgroundColor}"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    Text="JS" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryColor}"
                                    Text="Jane Smith" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    Text="103 messages" />
                            </StackPanel>

                            <Border
                                Grid.Column="2"
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Background="{StaticResource SecondaryBackgroundColor}"
                                CornerRadius="4">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryAccentColor}"
                                    Text="#2" />
                            </Border>
                        </Grid>

                        <!--  User 3  -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="36"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="{StaticResource TertiaryBackgroundColor}"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    Text="GT" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextPrimaryColor}"
                                    Text="Group Team" />
                                <TextBlock
                                    FontSize="11"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    Text="87 messages" />
                            </StackPanel>

                            <Border
                                Grid.Column="2"
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Background="{StaticResource SecondaryBackgroundColor}"
                                CornerRadius="4">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryAccentColor}"
                                    Text="#3" />
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  Recent Messages Section  -->
        <Border
            Grid.Row="2"
            Padding="20"
            Background="{StaticResource SecondaryBackgroundColor}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource TextPrimaryColor}"
                    Text="Recent Messages" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,2,0,16"
                    FontSize="11"
                    Foreground="{StaticResource TextSecondaryColor}"
                    Text="Latest activity from all chats" />

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Message 1  -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="36"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="{StaticResource TertiaryBackgroundColor}"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryAccentColor}"
                                    Text="JD" />
                            </Border>

                            <Border
                                Grid.Column="1"
                                Padding="12,8"
                                Background="{StaticResource SecondaryBackgroundColor}"
                                CornerRadius="4">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource TextPrimaryColor}"
                                            Text="John Doe" />
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            FontSize="10"
                                            Foreground="{StaticResource TextSecondaryColor}"
                                            Text="12:42 PM" />
                                    </Grid>
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="12"
                                        Foreground="{StaticResource TextSecondaryColor}"
                                        Text="That sounds great! Can you share your progress sometime this week? I'd love to see what you've done."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <materialDesign:PackIcon
                                Grid.Column="2"
                                Width="16"
                                Height="16"
                                Margin="8,0,0,0"
                                VerticalAlignment="Top"
                                Foreground="{StaticResource PrimaryAccentColor}"
                                Kind="CheckAll" />
                        </Grid>

                        <!--  Message 2  -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="36"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="{StaticResource TertiaryBackgroundColor}"
                                CornerRadius="18">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TextSecondaryColor}"
                                    Text="JS" />
                            </Border>

                            <Border
                                Grid.Column="1"
                                Padding="12,8"
                                Background="{StaticResource SecondaryBackgroundColor}"
                                CornerRadius="4">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource TextPrimaryColor}"
                                            Text="Jane Smith" />
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            FontSize="10"
                                            Foreground="{StaticResource TextSecondaryColor}"
                                            Text="10:22 AM" />
                                    </Grid>
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="12"
                                        Foreground="{StaticResource TextSecondaryColor}"
                                        Text="Thanks for your help! I really appreciate it."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <materialDesign:PackIcon
                                Grid.Column="2"
                                Width="16"
